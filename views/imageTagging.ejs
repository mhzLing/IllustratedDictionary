<html>
  <head>
    <title>Image Tagging with jQuery and PHP</title>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/themes/smoothness/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/jquery-ui.min.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets\taggingStylesheet.css">
    <script type="text/javascript" src="scripts\taggingScript.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets\style.css">
  </head>
  <body>

    <!-- The Modal -->
    <div id="conceptModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close" onclick='closeModal()'>&times;</span>
        <p><b>Choose definition:</b></p>
        <div class="concept-content">
        </div>
      </div> <!-- end of Modal content -->
    </div> <!-- end of Modal -->

    <!-- Main_panel -->
    <div id='main_panel'>

      <div style='margin: auto; width: 600px;'> <!-- Where the image tagging takes place -->
        <div id='image_panel' >
          <div id='imageDiv'><img src='' id='imageMap'  /></div> <!-- Image is placed here -->
          <div id='mapper' ><img src='images\save.png' onclick='openDialog()' /></div> <!-- Resizable box for tags -->

          <!-- This is where the tags are saved -->
          <div id="planetmap">
          </div>

          <div id='form_panel'> <!-- Prompt that pops up so user can place a word for the tag -->
            <div class='row'>
              <div class='label'>Title</div><div class='field'><input type='text' id='title' /></div>
            </div>
            <div class='row'>
              <div class='label'></div>
              <div class='field'>
                <input type='button' id='addTag' value='Add Tag' onclick='addTag()' />
              </div>
            </div>
          </div> <!-- end of prompt -->

        </div> <!-- end of image_panel -->
      </div> <!-- End of margin -->
      <div style="background: none repeat scroll 0 0 #AB3939;
                 border: 1px solid #FFFFFF;
                 clear: both;
                 margin: 20px auto;
                 padding: 20px 0;
                 text-align: center;
                 width: 600px;">
                <input type="button" value="Show Tags" onclick="showTags()" />
                <input type="button" value="Hide Tags" onclick="hideTags()" />
                <input type="button" value="Save Tags" onclick="saveTags()" />

                <!--
                <div class="dropdown">
                  <button class="dropbtn">Vocabulary Games</button>
                  <div class="dropdown-content">
                    <a href="#">Easy</a>
                    <a href="#">Medium</a>
                    <a href="#">Hard</a>
                  </div>
                </div>
                -->
    </div> <!-- end of main_panel -->

    <div style="background: none repeat scroll 0 0 #AB3939;
               border: 1px solid #FFFFFF;
               clear: both;
               margin: 20px auto;
               padding: 20px 0;
               text-align: center;
               width: 600px;">


              <div class="dropdown">
                <label style="font-weight: bold; color: #D69A33">From:</label>
                <select id='from'>
                  <option value='eng_3_0'>English</option>
                  <option value='spa'>Spanish</option>
                  <option value='ita'>Italian</option>
                </select>

                <label style="font-weight: bold; color: #D69A33">To:</label>
                <select id='to'>
                  <option value='eng_3_0'>English</option>
                  <option value='spa'>Spanish</option>
                  <option value='ita'>Italian</option>
                </select>

                <input type="button" value="Translate" onclick="translateWords()" />
              </div>
    </div>

  </body>
</html>
